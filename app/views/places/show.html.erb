<div class="booyah-box col-10 offset-1">
  <h1> <%= @place.name %> </h1><br />
  <i><%= @place.address %></i>
  <br /><br />
  <p><%= @place.description %></p>


  <div class="float-right">
    <% if current_user && current_user == @place.user %>
      <%= link_to 'Edit', edit_place_path(@place), class: 'btn btn-primary' %>
    <% end %>
    <%= link_to 'Delete', place_path(@place), method: :delete, data: {confirm: 'Are you shure you want to delete this?'}, class: 'btn btn-primary' %>
  </div>
</div>
<!-- once the show action is called, it passes in place[:id] to here and we then display it however we want -->